<seelog>
    <outputs formatid="log">
        <filter levels="error">
            <rollingfile formatid="err" type="date" filename="fbftp.err" datepattern="2006-01-02" maxrolls="7"/>
        </filter>
        <filter levels="info">
            <rollingfile type="date" filename="fbftp.info" datepattern="2006-01-02" maxrolls="7"/>
        </filter>
    </outputs>
    <formats>
        <format id="log" format="%Date %Time %Msg%n"/>
        <format id="err" format="%Date %Time %File:%Line  [%LEVEL] %Msg%n"/>
    </formats>
</seelog>